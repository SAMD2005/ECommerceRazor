@page
@model ECommerceRazor.Pages.Admin.Categorias.IndexModel
@{
    ViewData["Title"] = "Lista de categorias";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lista de Categorias</h2>
        <a asp-page="Crear" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Nueva Categoria

        </a>
    </div>

    @if(Model.Categorias != null && Model.Categorias.Any())
    {
        <table id="categoriasTable" class="table table-striped table-bordered">
            <thead class=" table-dark">
                <tr>
                    <th>ID</th>
                    <th>@Html.DisplayNameFor(model => model.Categorias.First().Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Categorias.First().OrdenVisualizacion)</th>
                    <th>Fecha de Creacion</th>
                    <th>Acciones</th>
                </tr>
          </thead>
          <tbody>
              @foreach (var categoria in Model.Categorias)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Nombre</td>
                        <td>@categoria.OrdenVisualizacion</td>
                        <td>@categoria.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-page="Editar" asp-route-id="@categoria.Id" class="btn btn-sm btn-warning">
                                <i class="fa-solid fa-pen-to-square"></i> Editar
                            </a>
                              <a asp-page="Detalle" asp-route-id="@categoria.Id" class="btn btn-sm btn-info">
                                <i class="fa-solid fa-circle-info"></i> Detalle
                            </a>
                          
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-danger btn-delete" data-id="@categoria.Id" data-name="@categoria.Nombre">
                                <i class="fa-solid fa-trash-can"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            no hay categorias registradas aun
        </div>
    }
</div>

@section Scripts {
   <script src="~/js/categoriasTable.js"></script>
   <script src="~/js/eliminarCategoria.js"></script>
}